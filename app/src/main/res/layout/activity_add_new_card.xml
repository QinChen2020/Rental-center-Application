<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_new_card">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD A NEW PAYOUT METHOD"
        android:textSize="25dp"
        android:gravity="center"
        android:background="#dd99ff"
        android:textColor="#656600"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:textSize="18dp"
        android:textStyle="normal"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_below="@+id/back"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit/Debit Card"
        android:textSize="25dp"
        android:layout_below="@id/line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_type"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:hint="Card Number*"
        android:inputType="number"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/card"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/card_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/card"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:hint="  Name On Card*"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/expiry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="  MM/YY*"
        android:textSize="20dp"
        android:inputType="date"/>

    <TextView
        android:id="@+id/textView_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expiry_date"
        android:layout_marginLeft="22dp"
        android:text="Card expiry date"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/cvv"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:hint="  CVV*"
        android:inputType="number"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/question_mark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView_4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/cvv"
        android:background="@drawable/question_mark" />

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textSize="20dp"
        android:layout_below="@+id/question_mark"
        android:layout_marginTop="40dp" />


</RelativeLayout>