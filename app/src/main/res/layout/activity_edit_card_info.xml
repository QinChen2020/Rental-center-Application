<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_card_info">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAYOUT METHOD"
        android:textSize="40dp"
        android:gravity="center"
        android:background="#dd99ff"
        android:textColor="#656600"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add common payment methods to ensure timely payment."
        android:textSize="20dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_below="@+id/explain"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/existing_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="View my existing card"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/add_new_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/existing_card"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Add a new card"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_below="@+id/add_new_card"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:textSize="18dp"
        android:layout_below="@id/line_2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="normal"/>

</RelativeLayout>