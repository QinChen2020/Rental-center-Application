<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Personal_info">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit personal info"
        android:gravity="center"
        android:background="#dd99ff"
        android:textColor="#656600"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="back"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="5dp"
        android:text="SAVE"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/return_button"
        android:layout_marginTop="5dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name"
        android:textSize="20dp"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/edit_fn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint=" Enter first name"
        android:textSize="22dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_fn"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Surname"
        android:textSize="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/edit_sn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surname"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint=" Enter surname"
        android:textSize="22dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="20dp"
        android:layout_below="@+id/edit_sn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="italic"/>

    <RadioGroup
        android:id="@+id/edit_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="22dp"
            android:textStyle="normal"/>
        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="22dp"
            android:textStyle="normal"/>
        <RadioButton
            android:id="@+id/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textSize="22dp"
            android:textStyle="normal"/>

    </RadioGroup>

    <TextView
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textSize="20dp"
        android:layout_below="@+id/edit_gender"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/edit_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/birthday"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=" Select a date" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:layout_below="@+id/edit_birthday"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint=" Enter e-mail address"
        android:textSize="22dp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:textSize="20dp"
        android:layout_below="@+id/edit_email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint=" Enter your phone number"
        android:textSize="22dp"
        android:inputType="phone"/>

</RelativeLayout>