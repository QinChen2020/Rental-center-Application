<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order">

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dd99ff"
        android:gravity="center"
        android:text="ORDER HISTORY"
        android:textColor="#656600"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_title"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="5dp"
        android:text="return"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/btn_return"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/no_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is no order information yet."
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/line"
        android:layout_marginTop="10dp"
        android:textStyle="italic"/>

    <RelativeLayout
        android:id="@+id/order_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="#f2e5ff"
        android:visibility="invisible">

        <TextView
            android:id="@+id/order_NO_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="order number"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/house_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_NO_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="house name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/order_address_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/house_name_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="house adress"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_date_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="date"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="#f2e5ff"
        android:visibility="invisible">

        <TextView
            android:id="@+id/order_NO_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="order number"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/house_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_NO_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="house name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/order_address_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/house_name_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="house adress"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_date_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="date"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="#f2e5ff"
        android:visibility="invisible">

        <TextView
            android:id="@+id/order_NO_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="order number"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/house_name_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_NO_3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="house name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/order_address_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/house_name_3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="house adress"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_date_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address_3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="date"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="#f2e5ff"
        android:visibility="invisible">

        <TextView
            android:id="@+id/order_NO_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="order number"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/house_name_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_NO_4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="house name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/order_address_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/house_name_4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="house adress"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_date_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address_4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="date"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/order_4"
        android:layout_marginTop="36dp"
        android:background="#dd99ff"
        >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="back"
            android:textSize="20dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_toRightOf="@+id/btn_back"
            android:text="next"
            android:textSize="20dp"
            android:visibility="invisible"/>

    </RelativeLayout>




</RelativeLayout>